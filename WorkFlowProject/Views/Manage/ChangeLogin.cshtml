@model WorkFlowProject.Models.ChangeLoginModel

@{
    ViewBag.Title = "Changer Login";
}

<h2>@ViewBag.Title</h2>
<hr />
<br />
<div class="row">
    <div class="col-xs-offset-2 col-xs-8">
        @using (Html.BeginForm("ChangeLogin","Manage",FormMethod.Post))
        {
           @Html.AntiForgeryToken()
            <div class="form-horizontal">

                

                <div class="form-group">
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-6" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-6 col-md-6">
                        <input type="submit" value="Modifier" class="btn form-control btn-danger" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>
