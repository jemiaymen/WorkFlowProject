@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> @User.Identity.GetUserName() <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li>@Html.ActionLink("Changer Mot de passe ", "ChangePassword", "Manage")</li>
                <li>@Html.ActionLink("Changer Login", "ChangeLogin", "Manage")</li>
                <li class="divider"></li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Se déconnecter</a></li>
            </ul>
        </li>
    </ul>

    
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Se Connecter", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
