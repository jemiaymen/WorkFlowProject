@model WorkFlowProject.Models.Historique

@{
    ViewBag.TitleOne = "Liste des Demandes d'Achat Accepter";
    ViewBag.TitleT = "Liste des Demandes d'Achat Refuser";
    ViewBag.Title = "Historique";
}
@if (User.IsInRole(SecurityRole.RespAcha))
{
    <div class="row">
        <div class="col-xs-6">
            <h2>@ViewBag.TitleOne</h2>
            <br /><br />

            <table class="table table-striped table-hover table-bordered">
                <tr>
                    <th>
                        Departement
                    </th>
                    <th>
                        Libélé
                    </th>
                    <th>
                        Categorie
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Accepted)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department.Dep)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Des)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Categ)
                        </td>
                        <td>
                            @Html.ActionLink("Détail", "Detail", new { id = item.ID })
                        </td>

                    </tr>
                }

            </table>

        </div>

        <div class="col-xs-6">
            <h2>@ViewBag.TitleT</h2>
            <br /><br />

            <table class="table table-striped table-hover table-bordered">
                <tr>
                    <th>
                        Departement
                    </th>
                    <th>
                        Libélé
                    </th>
                    <th>
                        Categorie
                    </th>
                    <th>Refuser Par</th>
                    <th></th>
                </tr>

                @foreach (var item in Model.Refused)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Achat.Department.Dep)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Achat.Des)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Achat.Categ)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Avis.User.UserName)
                        </td>
                        <td>
                            @Html.ActionLink("Détail", "Detail", new { id = item.Achat.ID })
                        </td>

                    </tr>
                }

            </table>

        </div>

    </div>

}
else if (User.IsInRole(SecurityRole.Demandeur))
{
    <div class="row">
        <div class="col-xs-6">
            <h2>@ViewBag.TitleOne</h2>
