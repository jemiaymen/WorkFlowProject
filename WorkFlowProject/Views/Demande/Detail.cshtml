    @if (ViewBag.AvisDg != null)
    {

        <div class="col-xs-6">
            <div class="row">
                <label>Décision Direction Générale</label> <br />
                @ViewBag.AvisDg.Lbl
            </div>
            <div class="row">
                <img src="@ViewBag.AvisDg.User.SignatureUser" alt="Sign" width="140" />
